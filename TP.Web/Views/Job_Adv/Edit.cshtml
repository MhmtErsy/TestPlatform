@model TP.Entities.ValueObjects.JobViewModels.JobAdvEditViewModel

@{
    ViewBag.Title = "İlan Düzenle";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>

<div class="row">

    <div class="col-md-8 col-md-offset-2">
        @using (Html.BeginForm(Html.BeginForm(Html.BeginForm("Edit", "Job_Adv", FormMethod.Post, new { enctype = "multipart/form-data" }))))
        {
            <div class="form-horizontal">
                @Html.ValidationSummary(false)
                @Html.HiddenFor(x => x.adv_picturepath)
                <div class="form-group">
                    @Html.Label("Resim:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <img id="myImg" src="/Images/Adv_Images/@Model.adv_picturepath" alt="@Model.adv_title" style="height:400px;width:400px" class="form-control"><br />
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Resim Yükleyin:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <label class="custom-file">
                            <input type="file" name="AdvImage" id="AdvImage" class="form-control" />
                            <span class="custom-file-control"></span>
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.adv_title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.adv_title, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.adv_desc, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.adv_desc,20,30, htmlAttributes: new { @class = "form-control",@style="resize:none"})
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.AwardScoreValue, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.AwardScoreValue, new { htmlAttributes = new { @class = "form-control", min = 0 } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.price, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                           @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" },min=0 })

                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-success">
                            <span class="fa fa-plus"></span>Düzenle
                        </button>
                        @Bootstrap.LinkButton("/Job_Adv/Index/" + Model.Id, "default", "btn-md", "İlanlar Listesine Git", "arrow-left", " İlanlar Listesine Git")
                    </div>
                </div>
            </div>
        }


    </div>


</div>
